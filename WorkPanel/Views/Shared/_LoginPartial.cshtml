@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="navbar-inner">
        <ul class="nav navbar-nav">
               @if (ViewData["Title"].ToString().Contains("Panel"))
               {
                   <li>
                       <a asp-area="" asp-controller="Panel" asp-action="Index" title="Portfolio">Portfolio</a>
                   </li>
                   <li>
                       <a asp-area="" asp-controller="Panel" asp-action="Index" title="Investors" style="margin-right: -10px;"><b style="color: white">Investors</b></a>
                   </li>

                   <li>
                       <a asp-area="" asp-action="AddInvestor" asp-controller="Panel" title="Investors" data-toggle="modal" data-target="#add-modal" ><b style="color: white; border-radius: 20px; background: blue; padding: 10px;">+ Add Investor</b></a>
                   </li>
               }
               else
               {
                   <li>
                       <a asp-area="" asp-controller="Panel" asp-action="Index" title="Portfolio"><b style="color: white">Portfolio</b></a>
                   </li>
                   <li>
                       <a asp-area="" asp-controller="Panel" asp-action="Index" title="Portfolio">Portfolio</a>
                   </li>
                   <li>
                       <a asp-area="" asp-action="AddInvestor" asp-controller="Panel" title="Investors"><b style="color: white">+ Add Asset</b></a>
                   </li>
               }
        </ul>
    </div>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right" style="margin-top: -50px; margin-right: 10px;">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}